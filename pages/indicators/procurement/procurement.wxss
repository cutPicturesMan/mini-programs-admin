.procurement{
  margin: 30rpx 40rpx 0rpx;
}
.procurement-information{
  display: flex;
  /* flex-wrap: wrap; */
  justify-content: space-between;
  font-size: 32rpx;
}

.procurement-information-item{
  display: flex;
}

.procurement-information-label{
  min-width: 140rpx ;
  text-align-last: justify;
}

.procurement-information-item:nth-of-type(3),
.procurement-information-item:nth-of-type(4){
  text-align: justify;
}

.procurement-information-name{
  flex-wrap: wrap;
}
.procurement-chart{
  /* display: flex; */
  /* justify-content: center; */
  height: 800rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* 图表日期选择控件 */
.procurement-chart-date{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}

.procurement-chart-date-item{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
}

.procurement-chart-date-picker{
  font-size: 30rpx;
  height: 40rpx;
  width: 180rpx;
  border: #bbb 1rpx solid;
}