<view class="indicators">
  <view class="indicators-head">
    <view class="indicators-head-item">负责人：王先生</view>
    <view class="indicators-head-item">下属人数：14</view>
    <view class="indicators-head-item">考核指标：20万</view>
    <view class="indicators-head-item">达成业绩：13.6万</view>
    <view class="indicators-head-item">开始时间：2017-9</view>
    <view class="indicators-head-item">结束时间：2017-12</view>
  </view>
  <view class="indicators-head-item">时间进度：20%</view>
  <progress percent="20" activeColor="red" />
  <view class="indicators-head-item">达成进度：50%</view>
  <progress percent="50" activeColor="green" />
  <view class="indicators-rank">
    <view class="indicators-rank-text">团队排名：2</view>
    <button size="mini" class="indicators-rank-button" bindtap="moified">调整指标</button>
  </view>
  <view class="indicators-salesman-table">
    <view class="indicators-salesman" wx:for="{{salesman}}" wx:key="item" bindtap="personIndicators">
      <view>
        <image style="width: 62rpx; height: 62rpx;" src="{{item.profile}}" mode="aspectFit"></image>
      </view>
      <view>{{item.ranking}}</view>
      <view>{{item.name}}</view>
      <view>{{item.achievement}}</view>
      <view>{{item.schedule}}</view>
    </view>
  </view>
  <view class="indicators-customer-table">
    <view class="indicators-customer" wx:for="{{customer}}" wx:key="item" bindtap="procurement">
      <view>
        <image style="width: 62rpx; height: 62rpx;" src="{{item.profile}}" mode="aspectFit"></image>
      </view>
      <view>{{item.name}}</view>
      <view>{{item.lastTime}}</view>
      <view>{{item.orderWeek}}/周</view>
      <view>{{item.orderMonth}}/月</view>
    </view>
  </view>
</view>
