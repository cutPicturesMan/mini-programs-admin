    -webkit-flex: 1;
            flex: 1;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center; }
  .product_sku .r {
    padding-right: 20rpx; }
  .product_sku .c,
  .product_sku .r {
