page {
  padding-bottom: 100rpx;
  background-color: #fff; }

.product_item {
  padding: 18rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex; }
  .product_item .image {
    width: 100rpx;
    height: 100rpx; }
